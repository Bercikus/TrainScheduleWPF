<Window x:Class="RozkladJazdyPociagow.ConnectionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RozkladJazdyPociagow"
        mc:Ignorable="d"
        Title="ConnectionsWindow" Height="415" Width="410" Left="260" Top="170" ResizeMode="NoResize" >


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="204*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Center" Height="399"   Width="678"  VerticalAlignment="Center"  Source="/20200807123931icki.JPG_900-528.jpg" >


        </Image>

        <Grid x:Name="GridConnections" Background="#FF154AAC" Opacity="0.90" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="145*"/>
                <ColumnDefinition Width="180*"/>
                <ColumnDefinition Width="13*"/>
                <ColumnDefinition Width="57*"/>
            </Grid.ColumnDefinitions>



            <TextBox x:Name="goFromBoxWin2" Margin="5,154,148,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" Grid.ColumnSpan="2" Grid.Column="1"/>
            <TextBox x:Name="goToBoxWin2" HorizontalAlignment="Left" Margin="70,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" FontSize="22" Grid.Column="2" Grid.ColumnSpan="3"/>

            <Label x:Name="label2Win2" Content="Miasto odjazdu" Margin="33,119,130,224" Foreground="White" Grid.ColumnSpan="2" Grid.Column="1"/>
            <Label x:Name="label3Win2" Content="Miasto przyjazdu" Margin="95,119,0,229" Foreground="White" Grid.Column="2" Grid.ColumnSpan="3"/>
            <Label x:Name="label1Win2" Content="SZUKAJ POŁĄCZEŃ" x:FieldModifier="public" HorizontalAlignment="Left" Margin="101,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" FontSize="20" Grid.ColumnSpan="2" Grid.Column="1"/>
            <Button x:Name="buttonFindConnection" Content="Szukaj" HorizontalAlignment="Left"  Width="100"  Margin="140,299,0,42" FontSize="16" Background="White"  Click="FindConnectionClick" Grid.ColumnSpan="2" Grid.Column="1" />
            <DatePicker x:Name="DatePickerWin2" HorizontalAlignment="Left" Margin="117,238,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="34" Width="146" FontSize="16" Grid.Column="1"/>







            <DataGrid x:Name="dataGridConnections" Visibility="Hidden" Background="#FF154AAC" Foreground="Black" FontSize="16" Grid.ColumnSpan="5" Margin="0,0,0,37" >

                <DataGrid.Resources>
                    <Style TargetType= "{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#FF454CAC"></Setter>
                        <Setter Property="FontWeight" Value="Bold"></Setter>
                        <Setter Property="Foreground" Value="White"></Setter>
                        <Setter Property="BorderBrush" Value="Black"></Setter>
                    </Style>

                </DataGrid.Resources>


                <DataGrid.Columns   >

                    <DataGridTextColumn Header="            Z" Binding="{Binding Start_town }"  Width="122"    >

                    </DataGridTextColumn>


                    <DataGridTextColumn Header="           Do" Binding="{Binding End_town }"  Width="122"   >

                    </DataGridTextColumn>


                    <DataGridTextColumn Header="      Data"  Binding="{Binding Get_date }" Width="98">

                    </DataGridTextColumn>



                    <DataGridTextColumn Header=" Godzina" Binding="{Binding Get_time }" Width="74">

                    </DataGridTextColumn>


                    <DataGridTextColumn Header="    Czas"  Binding="{Binding Connection_time }" Width="70
                                        ">

                    </DataGridTextColumn>


                </DataGrid.Columns>

            </DataGrid>


            <Button x:Name="buttonFindNew" Visibility="Hidden" HorizontalAlignment="Left" Content="Znajdź inne połączenia"  Margin="12,347,0,0" VerticalAlignment="Top" Grid.ColumnSpan="4" Width="450" Height="27" FontSize="14" Click="FindNewClick" Grid.Column="1"/>


        </Grid>

    </Grid>


</Window>
